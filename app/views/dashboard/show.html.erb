<div class="container">  
  <div class="row">
    <div class="col s6">
    </div>
  </div>
    <div class="row">
      <div class="col s12">
        <div id="current-time">  
        <% time = Time.new %>
        <p class="year"><%= time.year%></p>     
        <p class="day"><%= time.strftime("%A,")%></p>
        <p class="date"><%= time.strftime("%d") %></p>
        </div>
        <div> 
        
        <span  class=""></span>
        <span class="month"><%= time.strftime("%B,") %></p>
        </div>
      </div>
    </div>    
      <!-- THIS IS THE CALENDAR -->
      <div class="row">
        <div class="col s12">
        <div id="calendar">
        <table class="highlight responsive-table">
        <thead>
          <tr>
              <th data-field="id">Date</th>
              <th data-field="time">Time</th>
              <th data-field="name">Event</th>
              <th data-field="location">Location</th>
          </tr>
        </thead>
        <tbody>
          <tr>
        <% @result.each do |event| %>
        <% @dt = event.start.date_time  %>
          <td><%= @dt.strftime('%B %d, %Y')%></td>
          <td><%= @dt.strftime('%I:%M %p') %></td> 
          <td><%= event.summary %></td>
          <td><%= event.location %></td>
          </tr>
        <%end%>       
        </tbody>
      </table>              
      </div>
    </div>
  </div>
<div class="row">  
  <div class="col s12">      
    <div class="collection">
      <% @job.each do |job| %>
      <% @company.each do |company|  %>
      <a href="/deck" class="collection-item"><%= job.position %> <%= company.name %></a>
      <% end %>
      <% end %>
    </div>
  </div>
</div> 
<div class="row">
  <div class="col s12">
    <a href="" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a> 
  </div>
</div>



</div>





